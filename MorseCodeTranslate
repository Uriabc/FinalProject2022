    public JButton getBtnMorse() {
        return btnMorse;
    }

    public JButton getBtnMorseLong() {
        return btnMorseLong;
    }

    public JButton getBtnMorseShort() {
        return btnMorseShort;
    }
    
    
    //method for reset the input and output
    private void reset() {
        txtTextIn.setText("");
        txtTextOut.setText("WAITING...");
        numMorse = 1;
        morse = "";
    }

    //Create arrays for the letters and the Morse code
    String[] letter = {"a","b","c","d","e","f","g","h","i","j","k","l","m","n",
                        "o","p","q","r","s","t","u","v","w","x","y","z","1","2",
                        "3","4","5","6","7","8","9","0"};
    String[] code = {" .  - "," -  .  .  . "," -  .  -  . "," -  .  . "," . "," .  .  -  . "," -  -  . "," .  .  .  . "," .  . "," .  -  -  - "," -  .  - "," .  -  .  . "," -  - "," -  . ",
                        " -  -  - "," .  -  -  . "," -  -  .  - "," .  -  . "," .  .  . "," - "," .  .  - "," .  .  .  - "," .  -  - "," -  .  .  - "," -  .  -  - "," -  -  .  . ",
                        " .  -  -  -  - "," .  .  -  -  - ", " .  .  .  -  - ", " .  .  .  .  - "," .  .  .  .  . "," -  .  .  .  . ", " -  - .  .  . "," -  -  -  .  . "," -  -  -  -  . "," -  -  -  -  - "};
    //Translate English to Morse Code
    private void btnTextActionPerformed(java.awt.event.ActionEvent evt) {                                        
        String text = txtTextIn.getText();
        text = text.toLowerCase();
        String note = "| ";
        for (int i =0; i < text.length(); i++) {
            
            for (int k = 0; k <36; k++) {
                if (letter[k].equals(text.substring(i,i+1))) {
                    note = note + code[k] + " | ";
                }
            }
            if (text.substring(i,i+1).equals(" ")) {
                note = note + "\n\n| ";
            }
            
        }
        txtTextOut.setText(String.valueOf(note));
    }                                       
    
    //changing the mode by increasing the count variable and modulus it with 2 ( 2 mode)
    int count = 0;
    private void btnModeActionPerformed(java.awt.event.ActionEvent evt) {                                        
        if (count%2 == 1) {
            lblMode.setText("MODE: ENGLISH -> MORSE CODE");
            btnText.setVisible(true);
            btnMorse.setVisible(false);
            btnMorseShort.setVisible(false);
            btnMorseLong.setVisible(false);
            txtTextIn.setEditable(true);
            btnMorseDel.setVisible(false);
            txtTextIn.setFont(new java.awt.Font("Monospaced", 2, 18));
            reset();
        }
        else {
            lblMode.setText("MODE: MORSE CODE -> ENGLISH");
            btnText.setVisible(false);
            btnMorse.setVisible(true);
            btnMorseShort.setVisible(true);
            btnMorseLong.setVisible(true);
            txtTextIn.setEditable(false);
            btnMorseDel.setVisible(true);
            txtTextIn.setFont(new java.awt.Font("Monospaced", 2, 22));
            reset();
        }
        count++;
        
    }                                       
    
//Translate Morse code mode    
    String morse = "";
    int numMorse = 1;
    //add the short sign to the input
    private void btnMorseShortActionPerformed(java.awt.event.ActionEvent evt) {                                              
        if (numMorse <=5) {
            morse = morse + " . ";
            txtTextIn.setText("" + morse);
            numMorse++;
        }
    }                                             
    //add the long sign to the input
    private void btnMorseLongActionPerformed(java.awt.event.ActionEvent evt) {                                             
        if (numMorse <=5) {
            morse = morse + " - ";
            txtTextIn.setText("" + morse);
            numMorse++;
        }
    }                                            

    private void btnMorseActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String text = txtTextIn.getText();
        txtTextOut.setText("CAN NOT FIND THE LETTER!\n PLEASE TRY AGAIN...");
        for (int i = 1; i < 36; i ++) {
                if (code[i].equals(text)) {
                    txtTextOut.setText("" + letter[i]);
                }
        }
    }                                        
    //remove the last sign in the input
    private void btnMorseDelActionPerformed(java.awt.event.ActionEvent evt) {                                            
        if (numMorse >1) {
            String newMorse = morse.substring(0,morse.length()-3);
            morse = newMorse;
            txtTextIn.setText("" + morse);
            txtTextOut.setText("WAITING...");
            numMorse--;
        }
    }                                           

